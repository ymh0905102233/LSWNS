<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">
                <TextView
                    android:id="@+id/txtTaskNo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:layout_weight="0.7"
                    android:textColor="@color/blueviolet"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/txtStrVoucherType"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:maxLines="1"
                    android:textAlignment="textEnd"
                    android:textColor="@color/dodgerblue"
                    android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">


                <TextView
                    android:id="@+id/txtERPVoucherNo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:maxLines="1"
                    android:textColor="@color/saddlebrown"
                    android:textSize="15sp"/>


                <TextView
                    android:id="@+id/txtIssueType"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:maxLines="1"
                    android:text="2"
                    android:textColor="@color/darkorchid"
                    android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

                <TextView
                    android:id="@+id/txtCompany"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:maxLines="1"
                    android:text="2"
                    android:textAlignment="textStart"
                    android:textColor="@color/peru"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/txtdepartment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:maxLines="1"
                    android:text="1"
                    android:textAlignment="textStart"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtVouUser"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.3"
                    android:maxLines="1"
                    android:textAlignment="textStart"
                    android:textColor="@color/mediumvioletred"
                    android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:visibility="gone">
                <TextView
                    android:id="@+id/txtCustoms"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textColor="@color/gray"
                    android:textSize="15sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

                <TextView
                    android:id="@+id/txtFloorName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:maxLines="1"
                    android:textAlignment="textStart"
                    android:textColor="@color/firebrick"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtPcikName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:maxLines="1"
                    android:textAlignment="textStart"
                    android:textColor="@color/maroon"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/txtStockLeave"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:maxLines="1"
                    android:textAlignment="textStart"
                    android:textColor="@color/darkblue"
                    android:textSize="15sp" />

        </LinearLayout>


</LinearLayout>